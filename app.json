{
  "expo": {
    "name": "GrowPath AI",
    "slug": "growpath-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "growpathai",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.growpathai.app",
      "icon": "./assets/icon.png",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "GrowPath AI needs access to your photo library to let you upload grow photos, diagnose plant issues, and share your growing journey.",
        "NSCameraUsageDescription": "GrowPath AI needs access to your camera to take photos of your plants for tracking growth and diagnosing issues.",
        "NSPhotoLibraryAddUsageDescription": "GrowPath AI needs permission to save photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#2d5a2d"
      },
      "package": "com.growpathai.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "*.growpathai.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "GrowPath AI needs access to your photos to upload grow images and track your plant progress.",
          "cameraPermission": "GrowPath AI needs camera access to capture plant photos for diagnostics and grow logs."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6cc46b82-1bf2-4fe8-989a-0f77b7a51370"
      }
    }
  }
}
